{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mozcloud-workload-stateless",
  "description": "mozcloud-workload-stateless values",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "component": {
      "type": "string"
    },
    "global": {
      "description": "Global values dictionary",
      "type": "object",
      "properties": {
        "mozcloud": {
          "type": "object",
          "properties": {
            "app_code": {
              "description": "Tenant's application code (eg. sumo, ads, remote-settings)",
              "type": "string"
            },
            "chart": {
              "description": "The name of the chart. This will match the app_code in single chart applications",
              "type": "string"
            },
            "env_code": {
              "description": "Environment (ie. dev, stage, prod)",
              "type": "string"
            },
            "image": {
              "description": "The container image repository and tag",
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                }
              }
            },
            "project_id": {
              "description": "GCP project ID",
              "type": "string"
            }
          },
          "required": [
            "app_code",
            "chart",
            "env_code",
            "project_id"
          ]
        }
      }
    },
    "mozcloud-workload-stateless-lib": {
      "type": "object"
    },
    "configMaps": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/configMap"
        }
      }
    },
    "externalSecrets": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/externalSecret"
        }
      }
    },
    "serviceAccounts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/serviceAccount"
        }
      }
    },
    "deployments": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/deployment"
        }
      }
    },
    "podMonitorings": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/podMonitoring"
        }
      }
    },
    "hpas": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/hpa"
        }
      }
    }
  },
  "$defs": {
    "argo": {
      "type": "object",
      "properties": {
        "hookDeletionPolicy": {
          "type": "string"
        },
        "hooks": {
          "type": "string"
        },
        "syncWave": {
          "type": "integer"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "argo": {
          "$ref": "#/$defs/argo"
        },
        "data": {
          "type": "object"
        }
      }
    },
    "externalSecret": {
      "type": "object",
      "properties": {
        "argo": {
          "$ref": "#/$defs/argo"
        },
        "target": {
          "type": "string"
        },
        "gsm": {
          "type": "object",
          "properties": {
            "secret": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          }
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "argo": {
          "$ref": "#/$defs/argo"
        },
        "gcpServiceAccount": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "projectId": {
              "type": "string"
            }
          }
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "argo": {
          "$ref": "#/$defs/argo"
        },
        "containers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "image": {
                "type": "string"
              },
              "tag": {
                "type": "string"
              },
              "command": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "env": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              },
              "envFrom": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "configMapRef": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "secretRef": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "securityContext": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "number"
                  },
                  "group": {
                    "type": "number"
                  }
                }
              },
              "resources": {
                "type": "object",
                "properties": {
                  "requests": {
                    "type": "object",
                    "properties": {
                      "cpu": {
                        "type": "string"
                      },
                      "memory": {
                        "type": "string"
                      }
                    }
                  },
                  "limits": {
                    "type": "object",
                    "properties": {
                      "cpu": {
                        "type": "string"
                      },
                      "memory": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "livenessProbe": {
                "type": "object",
                "properties": {
                  "httpGet": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string"
                      },
                      "port": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "readinessProbe": {
                "type": "object",
                "properties": {
                  "httpGet": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string"
                      },
                      "port": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "ports": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "containerPort": {
                      "type": "integer"
                    }
                  }
                }
              },
              "volumes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["configMap", "secret"]
                    },
                    "path": {
                      "type": "string"
                    },
                    "key": {
                      "type": "string"
                    },
                    "readOnly": {
                      "type": "boolean"
                    }
                  },
                  "required": ["name", "type", "path"]
                }
              }
            }
          }
        },
        "nginx": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "string",
              "enum": [
                "true",
                "false"
              ]
            },
            "image": {
              "type": "string"
            },
            "configMap": {
              "type": "string"
            },
            "resources": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            }
          }
        },
        "otel": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "autoInstrumentation": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "language": {
                  "type": "string",
                  "enum": [
                    "",
                    "dotnet",
                    "go",
                    "java",
                    "nodejs",
                    "python"
                  ]
                }
              }
            }
          }
        },
        "securityContext": {
          "type": "object",
          "properties": {
            "runAsNonRoot": {
              "type": "string",
              "enum": [
                "true",
                "false"
              ]
            }
          }
        },
        "serviceAccount": {
          "type": "string"
        },
        "strategy": {
          "type": "string",
          "enum": [
            "Recreate",
            "RollingUpdate"
          ]
        }
      }
    },
    "podMonitoring": {
      "type": "object",
      "properties": {
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "port": {
                "type": "string"
              },
              "scheme": {
                "type": "string"
              },
              "interval": {
                "type": "string"
              },
              "path": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "hpa": {
      "type": "object",
      "properties": {
        "minReplicas": {
          "type": "integer"
        },
        "maxReplicas": {
          "type": "integer"
        },
        "scaleTargetRef": {
          "type": "object",
          "properties": {
            "apiVersion": {
              "type": "string"
            },
            "kind": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          }
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "resource": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "target": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string"
                      },
                      "averageUtilization": {
                        "type": "integer"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
