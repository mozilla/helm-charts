{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mozcloud-workload-stateless",
  "description": "mozcloud-workload-stateless values",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "global": {
      "$ref": "https://raw.githubusercontent.com/mozilla/helm-charts/refs/heads/main/values.schema.json#/$defs/global"
    },
    "mozcloud-workload-stateless-lib": {
      "type": "object"
    },
    "mozcloud-ingress": {
      "type": "object"
    },
    "mozcloud-gateway": {
      "type": "object"
    },
    "configMaps": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/configMap"
        }
      }
    },
    "externalSecrets": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/externalSecret"
        }
      }
    },
    "serviceAccounts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/serviceAccount"
        }
      }
    },
    "deployments": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/deployment"
        }
      }
    },
    "podMonitorings": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/podMonitoring"
        }
      }
    },
    "hpas": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/hpa"
        }
      }
    }
  },
  "$defs": {
    "configMap": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object"
        }
      }
    },
    "externalSecret": {
      "type": "object",
      "properties": {
        "target": {
          "type": "string"
        },
        "gsm": {
          "type": "object",
          "properties": {
            "secret": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          }
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "gcpServiceAccount": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "projectId": {
              "type": "string"
            }
          }
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "containers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "image": {
                "type": "string"
              },
              "tag": {
                "type": "string"
              },
              "envFrom": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "configMapRef": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "secretRef": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "securityContext": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "number"
                  },
                  "group": {
                    "type": "number"
                  }
                }
              },
              "resources": {
                "type": "object",
                "properties": {
                  "requests": {
                    "type": "object",
                    "properties": {
                      "cpu": {
                        "type": "string"
                      },
                      "memory": {
                        "type": "string"
                      }
                    }
                  },
                  "limits": {
                    "type": "object",
                    "properties": {
                      "cpu": {
                        "type": "string"
                      },
                      "memory": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "livenessProbe": {
                "type": "object",
                "properties": {
                  "httpGet": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string"
                      },
                      "port": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "readinessProbe": {
                "type": "object",
                "properties": {
                  "httpGet": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string"
                      },
                      "port": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "ports": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "containerPort": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "podMonitoring": {
      "type": "object",
      "properties": {
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "port": {
                "type": "string"
              },
              "scheme": {
                "type": "string"
              },
              "interval": {
                "type": "string"
              },
              "path": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "hpa": {
      "type": "object",
      "properties": {
        "minReplicas": {
          "type": "integer"
        },
        "maxReplicas": {
          "type": "integer"
        },
        "scaleTargetRef": {
          "type": "object",
          "properties": {
            "apiVersion": {
              "type": "string"
            },
            "kind": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          }
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "resource": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "target": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string"
                      },
                      "averageUtilization": {
                        "type": "integer"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
