{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mozcloud-job",
  "description": "mozcloud-job values",
  "type": "object",
  "properties": {
    "global": {
      "description": "Global values dictionary",
      "type": "object",
      "properties": {
        "mozcloud": {
          "type": "object",
          "properties": {
            "app_code": {
              "description": "Tenant's application code (eg. sumo, ads, remote-settings)",
              "type": "string"
            },
            "chart": {
              "description": "The name of the chart. This will match the app_code in single chart applications",
              "type": "string"
            },
            "env_code": {
              "description": "Environment (ie. dev, stage, prod)",
              "type": "string"
            },
            "image": {
              "description": "The container image repository and tag",
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                }
              }
            },
            "project_id": {
              "description": "GCP project ID",
              "type": "string"
            }
          },
          "required": [
            "app_code",
            "env_code",
            "project_id"
          ]
        }
      }
    },
    "mozcloud-job-lib": {
      "type": "object"
    },
    "nameOverride": {
      "type": "string"
    },
    "cronJobs": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/cronjob"
        }
      }
    },
    "jobs": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/job"
        }
      }
    }
  },
  "$defs": {
    "common": {
      "type": "object",
      "properties": {
        "container": {
          "type": "object",
          "$ref": "#/$defs/container"
        },
        "cronJob": {
          "type": "object",
          "$ref": "#/$defs/cronJobConfig"
        },
        "job": {
          "type": "object",
          "$ref": "#/$defs/jobConfig"
        }
      }
    },
    "cronjob": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "config": {
          "type": "object",
          "$ref": "#/$defs/cronJobConfig",
          "required": ["schedule"]
        },
        "containers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/container"
          }
        },
        "jobConfig": {
          "$ref": "#/$defs/jobConfig"
        },
        "labels": {
          "type": "object"
        },
        "otel": {
          "$ref": "#/$defs/otelConfig"
        }
      }
    },
    "job": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "generateName": {
          "type": "boolean"
        },
        "containers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/container"
          }
        },
        "config": {
          "$ref": "#/$defs/jobConfig"
        },
        "argo": {
          "$ref": "#/$defs/argoConfig"
        },
        "otel": {
          "$ref": "#/$defs/otelConfig"
        },
        "labels": {
          "type": "object"
        }
      }
    },
    "container": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "command": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "args": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "env": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        },
        "envFrom": {
          "type": "object",
          "properties": {
            "configMaps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "secrets": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            }
          }
        },
        "securityContext": {
          "type": "object",
          "properties": {
            "group": {
              "type": "string"
            },
            "user": {
              "type": "string"
            },
            "addCapabilities": {
              "type": "array"
            }
          }
        },
        "volumes": {
           "type": "array",
           "items": {
             "type": "object",
             "additionalProperties": false,
             "properties": {
               "name": {
                 "type": "string"
               },
               "type": {
                 "type": "string",
                 "enum": ["configMap", "secret"]
               },
               "path": {
                 "type": "string"
               },
               "key": {
                 "type": "string"
               },
               "readOnly": {
                 "type": "boolean"
               }
             },
             "required": ["name", "type", "path"]
           }
         }
      }
    },
    "cronJobConfig": {
      "type": "object",
      "properties": {
        "jobHistory": {
          "type": "object",
          "properties": {
            "successful": {
              "type": "integer"
            },
            "failed": {
              "type": "integer"
            }
          }
        },
        "schedule": {
          "type": "string"
        },
        "suspend": {
          "type": "boolean"
        }
      }
    },
    "jobConfig": {
      "type": "object",
      "properties": {
        "activeDeadlineSeconds": {
          "type": "integer"
        },
        "backoffLimit": {
          "type": "integer"
        },
        "parallelism": {
          "type": "integer"
        },
        "restartPolicy": {
          "type": "string"
        },
        "securityContext": {
          "type": "object",
          "properties": {
            "group": {
              "type": "string"
            },
            "user": {
              "type": "string"
            }
          }
        },
        "serviceAccount": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "create": {
              "type": "boolean"
            },
            "gcpServiceAccount": {
              "type": "object",
              "properties": {
                "fullName": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "projectId": {
                  "type": "string"
                }
              }
            }
          }
        },
        "suspend": {
          "type": "boolean"
        },
        "ttlSecondsAfterFinished": {
          "type": "integer"
        }
      }
    },
    "argoConfig": {
      "type": "object",
      "properties": {
        "hookDeletionPolicy": {
          "enum": ["BeforeHookCreation", "HookSucceeded"]
        },
        "hooks": {
          "type": "string"
        },
        "syncWave": {
          "type": "integer"
        }
      }
    },
    "otelConfig": {
      "type": "object",
      "properties": {
        "autoInstrumentation": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "language": {
              "type": "string",
              "enum": [
                "",
                "dotnet",
                "go",
                "java",
                "nodejs",
                "python"
              ]
            }
          }
        }
      }
    }
  }
}
