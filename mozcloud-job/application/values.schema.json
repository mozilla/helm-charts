{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mozcloud-job",
  "description": "mozcloud-job values",
  "type": "object",
  "properties": {
    "global": {
      "$ref": "https://raw.githubusercontent.com/mozilla/helm-charts/refs/heads/main/values.schema.json#/$defs/global"
    },
    "mozcloud-job-lib": {
      "type": "object"
    },
    "nameOverride": {
      "type": "string"
    },
    "cronJobs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/cronjob"
      }
    },
    "jobs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/job"
      }
    }
  },
  "$defs": {
    "cronjob": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "config": {
          "type": "object",
          "properties": {
            "jobHistory": {
              "type": "object",
              "properties": {
                "successful": {
                  "type": "integer"
                },
                "failed": {
                  "type": "integer"
                }
              }
            },
            "schedule": {
              "type": "string"
            },
            "suspend": {
              "type": "boolean"
            }
          }
        },
        "containers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/container"
          }
        },
        "jobConfig": {
          "$ref": "#/$defs/jobConfig"
        },
        "labels": {
          "type": "object"
        }
      }
    },
    "job": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "generateName": {
          "type": "boolean"
        },
        "containers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/container"
          }
        },
        "config": {
          "$ref": "#/$defs/jobConfig"
        },
        "argo": {
          "$ref": "#/$defs/argoConfig"
        },
        "labels": {
          "type": "object"
        }
      }
    },
    "container": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "command": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "args": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "resources": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "object",
              "properties": {
                "requests": {
                  "type": "string"
                },
                "limits": {
                  "type": "string"
                }
              }
            },
            "memory": {
              "type": "object",
              "properties": {
                "requests": {
                  "type": "string"
                },
                "limits": {
                  "type": "string"
                }
              }
            }
          }
        },
        "securityContext": {
          "type": "object",
          "properties": {
            "group": {
              "type": "string"
            },
            "user": {
              "type": "string"
            }
          }
        }
      }
    },
    "jobConfig": {
      "type": "object",
      "properties": {
        "activeDeadlineSeconds": {
          "type": "integer"
        },
        "backoffLimit": {
          "type": "integer"
        },
        "parallelism": {
          "type": "integer"
        },
        "restartPolicy": {
          "type": "string"
        },
        "securityContext": {
          "type": "object",
          "properties": {
            "group": {
              "type": "string"
            },
            "user": {
              "type": "string"
            }
          }
        },
        "serviceAccount": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "create": {
              "type": "boolean"
            },
            "gcpServiceAccount": {
              "type": "object",
              "properties": {
                "fullName": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "projectId": {
                  "type": "string"
                }
              }
            }
          }
        },
        "suspend": {
          "type": "boolean"
        },
        "ttlSecondsAfterFinished": {
          "type": "integer"
        }
      }
    },
    "argoConfig": {
      "type": "object",
      "properties": {
        "hookDeletionPolicy": {
          "enum": ["BeforeHookCreation", "HookSucceeded"]
        },
        "hooks": {
          "type": "string"
        },
        "syncWave": {
          "type": "integer"
        }
      }
    }
  }
}
