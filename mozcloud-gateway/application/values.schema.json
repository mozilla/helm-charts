{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mozcloud-gateway",
  "description": "mozcloud-gateway values",
  "type": "object",
  "properties": {
    "global": {
      "description": "Global values dictionary",
      "type": "object",
      "properties": {
        "mozcloud": {
          "type": "object",
          "properties": {
            "app_code": {
              "description": "Tenant's application code (eg. sumo, ads, remote-settings)",
              "type": "string"
            },
            "chart": {
              "description": "The name of the chart. This will match the app_code in single chart applications",
              "type": "string"
            },
            "env_code": {
              "description": "Environment (ie. dev, stage, prod)",
              "type": "string"
            },
            "project_id": {
              "description": "GCP project ID",
              "type": "string"
            }
          },
          "required": [
            "app_code",
            "chart",
            "env_code",
            "project_id"
          ]
        }
      }
    },
    "mozcloud-gateway-lib": {
      "type": "object"
    },
    "enabled": {
      "type": "boolean"
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "backendPolicy": {
      "$ref": "#/$defs/backendPolicy"
    },
    "backends": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "$ref": "#/$defs/backend"
        }
      }
    },
    "gatewayPolicy": {
      "type": "object",
      "properties": {
        "sslPolicy": {
          "type": "string"
        }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "gateways": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9-_]+$": {
              "$ref": "#/$defs/gateway"
            }
          }
        }
      }
    },
    "httpRoute": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "httpRoutes": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9-_]+$": {
              "$ref": "#/$defs/httpRoute"
            }
          }
        }
      }
    },
    "trafficDistributionPolicy": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "create": {
          "type": "boolean"
        }
      }
    }
  },
  "$defs": {
    "backendPolicy": {
      "type": "object",
      "properties": {
        "connectionDraining": {
          "type": "object",
          "properties": {
            "drainingTimeoutSec": {
              "type": "integer"
            }
          }
        },
        "iap": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "oauth2ClientId": {
              "type": "string"
            },
            "oauth2ClientSecret": {
              "type": "string"
            }
          }
        },
        "logging": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "sampleRate": {
              "type": "integer"
            }
          }
        },
        "sessionAffinity": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "cookieTtlSec": {
              "type": "integer"
            }
          }
        },
        "timeoutSec": {
          "type": "integer"
        }
      }
    },
    "backend": {
      "type": "object",
      "properties": {
        "service": {
          "type": "object",
          "properties": {
            "create": {
              "type": "boolean"
            },
            "port": {
              "type": "number"
            },
            "portName": {
              "type": "string"
            },
            "protocol": {
              "type": "string"
            },
            "targetPort": {
              "type": "string"
            },
            "annotations": {
              "type": "object"
            },
            "labels": {
              "type": "object"
            },
            "selectorLabels": {
              "type": "object"
            }
          }
        },
        "healthCheck": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "protocol": {
              "type": "string"
            },
            "port": {
              "type": "number"
            },
            "checkIntervalSec": {
              "type": "number"
            },
            "timeoutSec": {
              "type": "number"
            },
            "healthyThreshold": {
              "type": "number"
            },
            "unhealthyThreshold": {
              "type": "number"
            }
          }
        },
        "backendPolicy": {
          "$ref": "#/$defs/backendPolicy"
        },
        "labels": {
          "type": "object"
        }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["internal", "external"]
        },
        "scope": {
          "type": "string"
        },
        "className": {
          "type": "string"
        },
        "addresses": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "listeners": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "protocol": {
                "type": "string"
              },
              "port": {
                "type": "number"
              }
            }
          }
        },
        "tls": {
          "type": "object",
          "properties": {
            "certs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "type": {
              "enum": ["certmap", "pre-shared", "secret"]
            },
            "annotations": {
              "type": "object"
            },
            "labels": {
              "type": "object"
            }
          }
        }
      }
    },
    "httpRoute": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "gatewayRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              },
              "section": {
                "type": "string"
              }
            }
          }
        },
        "hostnames": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "httpToHttpsRedirect": {
          "type": "boolean"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "backendRefs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "port": {
                      "type": "number"
                    },
                    "weight": {
                      "type": "number"
                    },
                    "kind": {
                      "type": "string",
                      "enum": [
                        "Service",
                        "ServiceImport"
                      ]
                    }
                  }
                }
              },
              "matches": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "pathPrefix": {
                          "type": "string"
                        }
                      }
                    },
                    "headers": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "redirect": {
                "type": "object",
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "statusCode": {
                    "type": "number"
                  }
                }
              },
              "rewrite": {
                "type": "object",
                "properties": {
                  "hostname": {
                    "type": "string"
                  },
                  "path": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "labels": {
          "type": "object"
        }
      }
    }
  }
}
