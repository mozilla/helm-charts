{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mozcloud-opentelemetry",
  "type": "object",
  "properties": {
    "collectors": {
      "type": "object",
      "properties": {
        "daemonset": {
          "type": "object",
          "properties": {
            "securityContext": {
              "type": "object",
              "properties": {
                "allowPrivilegeEscalation": {
                  "type": "boolean"
                },
                "capabilities": {
                  "type": "object",
                  "properties": {
                    "drop": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "privileged": {
                  "type": "boolean"
                },
                "runAsUser": {
                  "type": "integer"
                },
                "runAsGroup": {
                  "type": "integer"
                },
                "runAsNonRoot": {
                  "type": "boolean"
                },
                "seccompProfile": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string"
                    }
                  }
                }
              },
              "additionalProperties": true
            },
            "resources": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "gateway": {
          "type": "object",
          "properties": {
            "endpoints": {
              "type": "object",
              "properties": {
                "otlp": {
                  "type": "object",
                  "properties": {
                    "endpoint": {
                      "type": "string"
                    },
                    "port": {
                      "type": "string"
                    }
                  }
                },
                "headless": {
                  "type": "object",
                  "properties": {
                    "endpoint": {
                      "type": "string"
                    },
                    "port": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "securityContext": {
              "type": "object",
              "properties": {
                "allowPrivilegeEscalation": {
                  "type": "boolean"
                },
                "capabilities": {
                  "type": "object",
                  "properties": {
                    "drop": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "privileged": {
                  "type": "boolean"
                },
                "runAsUser": {
                  "type": "integer"
                },
                "runAsGroup": {
                  "type": "integer"
                },
                "runAsNonRoot": {
                  "type": "boolean"
                },
                "seccompProfile": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string"
                    }
                  }
                }
              },
              "additionalProperties": true
            },
            "autoscaler": {
              "type": "object",
              "properties": {
                "minReplicas": {
                  "type": "integer"
                },
                "maxReplicas": {
                  "type": "integer"
                },
                "targetCPUUtilization": {
                  "type": "integer"
                },
                "targetMemoryUtilization": {
                  "type": "integer"
                }
              }
            },
            "resources": {
              "type": "object",
              "properties": {
                "limits": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "string"
                    }
                  }
                },
                "requests": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        }
      }
    },
    "project_id": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
